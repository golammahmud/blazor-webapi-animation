@page "/collaps"
@inherits Collapsible_razorBase
@*@inject IJSRuntime JsRuntime*@
<h2 class="text-md-center text-info">Collapsable row</h2>
 @if (Msg!=null)
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>Success!</strong> Indicates a successful or positive action.
            </div>

        }
 <div class="pop-container">
        @if (Show)
        {
            <div class="popconfirm">
                @Message
                <button type="button" class="btn btn-warning" @onclick="() => Confirmation(false)">No</button>
                <button type="button" class="btn btn-primary" @onclick="() => Confirmation(true)">Yes</button>
            </div>

        }
        <button type="button" class="@Class" @onclick="ShowPop">@Title</button>
    </div>
@*
    @code {
        async Task OnButtonClicked()
       {
            await JsRuntime.InvokeVoidAsync("console.log", "C# says hello");
          await JsRuntime.InvokeVoidAsync("alert", "C# says hello");
      }
   }*@
   
<style>
.pop-container{
              position: relative;
          }
          
          .popconfirm{
              background-color: white;
              border-style: solid;
              border-width: 1px;
              border-color: lightblue;
              width: 250px;
              position: absolute;
              top: -50px;
              padding: 10px;
              border-radius: 8px;
          }
</style>